<link rel="stylesheet" href="/CSS/prod.css">
</head>
<body>
    <%-include('../Includes/Navigation.ejs')%>


    <div class="filter">
        <label ><strong>Filter Product By:</strong></label><br>
        <a href="/Product/Pname" class="filter1">Product Name</a><br>
        <a href="/Product/Pprice" class="filter1">Product Price(Low to High)<svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="black" class="bi bi-arrow-up-short" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M8 12a.5.5 0 0 0 .5-.5V5.707l2.146 2.147a.5.5 0 0 0 .708-.708l-3-3a.5.5 0 0 0-.708 0l-3 3a.5.5 0 1 0 .708.708L7.5 5.707V11.5a.5.5 0 0 0 .5.5z"/>
          </svg></a><br>
        <a href="/Product/PpriceHL" class="filter1">Product Price(High to Low)<svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="black" class="bi bi-arrow-down-short" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M8 4a.5.5 0 0 1 .5.5v5.793l2.146-2.147a.5.5 0 0 1 .708.708l-3 3a.5.5 0 0 1-.708 0l-3-3a.5.5 0 1 1 .708-.708L7.5 10.293V4.5A.5.5 0 0 1 8 4z"/>
          </svg></a><br>
        <a href="/Product/Pdes" class="filter1">Product Description</a><br>
    </div>
   

 
<%if(data.length>0){%>
        <table >
            <tr>
                <th>Product Title</th>
                <th>Product Price</th>
                
                <th>Product Description</th>
                <th>Image</th>
                <th>Edit</th>
                <th>Delete/get</th>
                <th>Delete/post</th>
            </tr>
            <%for(let x of data){%>    
          <tr>  
            <td ><%=x.P_name %></td>
            <td  ><%=x.P_price %></td>
            <td  ><%=x.P_des %></td>
            <td  ><img src="<%=x.P_img %>" alt="" class="imageadmin"> </td>
            <td><a href="/ProductEdit/<%=x._id%>">EDIT</a></td>
            <td><a href="/ProductDelete/<%=x._id%>">DELETE</a></td>
            <td>
                <form action="/DeleteProduct" method="POST">
                    <input type="hidden"  name="_csrf" value="<%=csrf_token%>">
                    <input type="hidden"  name="product_id" value="<%=x._id%>">
                    <button type="submit">DELETE</button>
                </form></td>
        </tr>
        <%}%>
        </table>

       

<%}else{%>
    <h1>DATA NOT FOUND</h1>
    <%}%>

    <%-include('../Includes/Footer.ejs')%>
